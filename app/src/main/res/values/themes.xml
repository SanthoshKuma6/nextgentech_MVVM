<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary</item>
        <item name="colorOnSecondary">@color/color_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Widget.App.ButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">#4079E5</item>
    </style>

</resources>